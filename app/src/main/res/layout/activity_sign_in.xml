<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a16gmail.maharana.akshaya.last.SignIn"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/etEmailSignin"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etPasswordSignIn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="72dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/etEmailSignin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnSignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signin"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="142dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/etPasswordSignIn"
        android:layout_alignLeft="@+id/btnSignup"
        android:layout_alignStart="@+id/btnSignup"
        android:background="#9b59b6"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="207dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/btnSignin"
        android:layout_centerHorizontal="true"
        android:background="#9b59b6"
        android:textColor="#ffffff"/>
</RelativeLayout>
